   <tr valign="top">
     <td>Description: </td>
  	 <td><%= text_area 'project', 'description',{:rows => 5}  %></td>
   </tr>
   <tr>
     <td><td><%= submit_tag 'Save' %></td></td>
   </tr>
 </table>

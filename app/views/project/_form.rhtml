    <td>Project name: </td>
  	<td><%= text_field 'project', 'name', :size => 20  %></td>
  </tr>
  <tr>
    <td>Client: </td>
    <td>
    <%= collection_select( :project, :client_id, @clients, :id, :name) %>    

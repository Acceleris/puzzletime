<% @title = Employee.labelPlural + ' ' + groupLabel %>

<table>
<tr>
    <th>Mitarbeiter</th>
    <th>Projektleitung</th>
</tr>
<%for membership in @project.projectmemberships %> 
<%= alternate_row %>
    <td> <%= membership.employee.label %> </td>        
    <td align="center"> 
    <% if !membership.projectmanagement %>
        <%= link_to 'Hinzuf&uuml;gen', 
    	            linkParams(:action => 'createManager', :id => membership) %>             
    <% else %>
        <%= link_to 'Entfernen', 
                    linkParams(:action => 'removeManager', :id => membership) %> 
    <% end %>          
    </td> 
    <td>
    <%= link_to 'Vom Projekt entfernen', 
                linkParams(:action => 'removeMembership', :id => membership), 
                :confirm => 'Sind sie sicher?', 
                :post => true %>
    </td>
  </tr>
<% end %>
</table> 
</br>


- @title = "#{listLabel} #{groupLabel}"

%table.striped
  %thead
    %tr
      %th= listLabel
      %th Projektleitung
  %tbody
    - for membership in @subject.projectmemberships.where(active: true).sort_by {|m| m.project }
      %tr
        %td
          = project? ? membership.employee.label : membership.project.label_verbose
        %td{:align => "center"}
          - if project? || @user.management?
            - if membership.projectmanagement
              = link_to 'Entfernen', pmLinkParams(:action => 'removeManager', :id => membership)
            - else
              = link_to 'Hinzuf&uuml;gen', pmLinkParams(:action => 'createManager', :id => membership)
          - else
            = membership.projectmanagement ? 'ja' : 'nein'
        %td
          = link_to 'Vom Projekt entfernen',
                    pmLinkParams(:action => 'removeMembership', :id => membership),
                    :confirm => "Wollen Sie #{membership.employee.label} wirklich vom Projekt #{membership.project.label} entfernen?",
                    :method => 'post'

%p
  = form_tag pmLinkParams(:action => 'createMembership') do
    = listLabel
    \:
    %br/
    = select_tag 'ids[]', options_from_collection_for_select(@list, :id, :label_verbose), :multiple => true, :size => 15
    = submit_tag 'HinzufÃ¼gen'
- if params[:groups]
  %p
    = link_to "&Uuml;bersicht #{group.class.labelPlural}", group_params({:controller => group.class.to_s.downcase, :action => 'list'})

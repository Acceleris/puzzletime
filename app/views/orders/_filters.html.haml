= form_tag(nil, method: :get, class: 'form-inline', role: 'filter') do
  = hidden_field_tag :page, 1

  = direct_filter(:q, 'Name') do
    .input-group.has-feedback.has-clear
      = search_field_tag :q, params[:q], class: 'form-control initial-focus', data: { submit: true }
      %span.form-control-feedback{ data: { clear: true } }
        = icon(:remove)

  = direct_filter_select(:department_id, 'OE', @departments)
  = direct_filter_select(:kind_id, 'Auftragsart', @order_kinds)
  = direct_filter_select(:status_id, 'im Status', @order_statuses, { class: 'searchable', multiple: true })

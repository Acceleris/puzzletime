= render 'orders/header'

%p Budget: #{@controlling.offered_hours}

Stunden:
%ul
  - @controlling.hours_per_week.each do |week, values|
    %li
      KW #{week.strftime('%W')} #{week.strftime('%Y')}
      %br
      Verrechenbar:
      = values[:billable]
      %br
      Nicht verrechenbar:
      = values[:unbillable]
      %br
      Definitiv geplant:
      = values[:planned_definitive]
      %br
      Provisorisch geplant:
      = values[:planned_provisional]

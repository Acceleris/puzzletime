- @title = 'Wochengrafik'
= stylesheet_link_tag 'graph', :media => 'all'
= render(:partial => 'evaluator/periodLink')
%table.graph
  %tr.head
    %th
    = weekday_header
    - @graph.each_day do |day|
      - if day.wday == 1
        = "</tr><tr>"
        %th
          KW #{day.cweek} &nbsp;
      = day_td day
      - @graph.timeboxes.reverse_each do |box|
        = timebox_div box
      .dateLabel= day.strftime(DATE_FORMAT)



%table.legend
  = render :partial => "legend", :collection => [Project, Absence]
  %tr
    %td{:colspan => "2"}
      %b Anwesenheit
  = render( :partial => 'legendItem', :collection => [['zus&auml;tzliche Anwesenheitszeit', Timebox::ATTENDANCE_POS_COLOR], ['fehlende Anwesenheitszeit', Timebox::ATTENDANCE_NEG_COLOR], ['Wochenende / Feiertag', '#DDDDDD' ]] )
  %tr
    %td= timebox_div Timebox.new(nil, '#FF0000', 1, '')
    %td
      Tagessoll (#{"%0.2f" % (MUST_HOURS_PER_DAY * @graph.must_hours_factor)}
      h)
%br{:clear => "all"}

- @title = "Planung aller Mitarbeiter"
= render :partial => 'evaluator/period_link'

%div.table-responsive
  %table.absence
    %thead
      = render :partial => 'plannings/header', :locals => {:type => :calendar_week}
    %tbody
      - @graph.employee_graphs.each do |employee_graph|
        = render :partial => 'plannings/employee_planning_entry_overview', :locals => { :user => employee_graph.employee, :employee_planning_graph => employee_graph, :type => :calendar_week}
    %tfoot
      = render :partial => 'plannings/footer', :locals => {:type => :calendar_week, :first_span => 2}

%br/
%br/
= render :partial => 'legend'

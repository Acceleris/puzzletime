.planning-panel.panel.panel-default
  = form_tag(plannings_order_path) do
    .panel-body
      .form-group
        = label_tag(:planning_percent, 'Pensum')
        .input-group.planning-percent-group
          = number_field_tag(:planning_percent, nil, class: 'form-control')
          .input-group-addon %
      .form-group
        = label_tag(nil, 'Status')
        %div
          .btn-group{role: :group}
            = button_tag('provisorisch', class: 'btn btn-default')
            = button_tag('fix', class: 'btn btn-default')
      .form-group
        .checkbox
          = label_tag do
            = check_box_tag(:repetition)
            Wiederholung wöchentlich
    .panel-footer.right

      = link_to(plannings_order_path,
                title: 'Löschen',
                class: 'planning-delete btn text-danger') do
        %i.icon-delete
      = button_tag('Abbrechen', type: :button, class: 'planning-cancel btn btn-link')
      = button_tag('OK', type: :submit, class: 'btn btn-primary')

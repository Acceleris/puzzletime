    .html('#{j(render('board'))}')
    .parent().append('#{j(render('add_row'))}');
  $('#planned_#{dom_id(@board.subject)}').html('#{j(render('header_planned'))}');

  App.plannings.reloadAll();
  App.plannings.dateFilterChanged();


%table.table-condensed.table-bordered.table-stripedbody.company-planning
  %thead
    = render 'header'
  %tbody
    %tr{ class: 'planning-company-totals' }
      %td.head.nowrap
        Total
      - @period.step(7) do |date|
        %td{ class: company_week_totals_state(date) }
          = link_to '#', class: 'has-tooltip' do
            #{(company_week_total(date) / 100).round(1)}/#{(company_weekly_employment_percent(date) / 100).round(1)} FTE
            %span
              #{(company_week_total(date)).round}% / #{(company_weekly_employment_percent(date)).round}%
              %br
              FTE = Anzahl Vollzeitstellen
    - @boards.each do |board|
      %tr
        %td.head.nowrap
          = link_to_if(can?(:show_plannings, board.employee),
                       board.employee.label,
                       plannings_employee_path(board.employee))

        - @period.step(7) do |date|
          %td{ class: board.week_totals_state(date) }
            = link_to '#', class: 'has-tooltip' do
              = board.week_total(date).to_f.round
              %span #{board.week_total(date).round}% / #{board.weekly_employment_percent(date).round}%

  %tfoot
    = render 'header'

<br/>
<table>
    <tr>
      <td>Employee: <%= @employee.lastname %> <%= @employee.firstname %></td>
    <% if params[:action] == 'showDetailAbsencePeriod' %>
    <tr>
      <td>Period: <%= @startdate %> to <%= @enddate %> </td>
    </tr>
    <% end %>
</table>
<br/>
<table>
<% for time in @times %>
<tr>
  <td><%= change_date(time.work_date) %></td><td><%=time.hours %>h</td>
  <td><%= time.absence.name %></td>
  <% if @user.management %>
  <td><%= link_to 'Edit', :controller => 'absence'  ,:action=>'editAbsenceTime' , :worktime_id => time , :employee_id => @employee %></td>
  <td><%= link_to 'Delete', :controller => 'absence'  ,:action=>'deleteAbsenceTime' , :worktime_id => time %></td>
  <% end %>
<tr>
<% end %> 
</table>
<% if @user.management %>
<%= link_to 'Current Absences', :action => 'showAbsences' %>
<% else %>
<%= link_to 'Current Absences', :controller => 'worktime', :action => 'showUserAbsences' %>
<% end %>

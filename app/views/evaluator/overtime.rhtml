<h1>Employee Overtime Overview</h1>
<br/>
<table>
  <tr>
    <td><div id="puzzle_table_title">Employee</div></td>
    <td><div id="puzzle_table_title">Current Overtime</div></td>
    <td><div id="puzzle_table_title">Remaining Vacations for <%= Date.today.year %></div></td>
  </tr>
  <% for employee in @employees %>
  <tr>
    <td><%= employee.label %></td>
    <td><%= number_with_precision(employee.currentOvertime, 2) %> h </td>
    <td><%= number_with_precision(employee.currentRemainingVacations, 2) %> d</td>
  </tr>
  <% end %>
</table>
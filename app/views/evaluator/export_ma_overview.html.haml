- @title = "Mitarbeiter Statistiken Puzzletime"
= render(:partial => 'period_link')
- Employee.list.each do |em|
  %h2= em.label
  Ueberzeit: #{format_number em.statistics.current_overtime(@period.end_date)} Stunden
  %br/
  Bezogene Ferien: #{format_number em.statistics.used_vacations(@period)} Tage
  %br/
  Ferienrestguthaben: #{format_number em.statistics.remaining_vacations(@period.end_date)} Tage
  %br/
  Positionen:
  %table
    - eval = EmployeeWorkItemsEval.new(em.id)
    - work_items = eval.times(@period).collect { |w| w.work_item }
    - work_items.uniq!
    - work_items.sort! {|a,b| a.label_verbose <=> b.label_verbose }
    - work_items.each do |p|
      %tr
        %td.text-right
          = format_hour eval.sum_times(@period, p)
        %td= p.label_verbose
  %hr/

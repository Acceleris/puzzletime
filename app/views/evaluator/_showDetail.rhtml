<br/>
<table>
    <tr>
      <td>Employee: <%= @employee.lastname %> <%= @employee.firstname %></td>
    </tr>
      <td>Project: <%= @project.name %></td>
    </tr>
    <% if params[:action] == 'showDetailPeriod' %>
    <tr>
      <td>Period: <%= @startdate %> to <%= @enddate %> </td>
    </tr>
    <% end %>
</table>
<br/>
<table>
<% for time in @times %>
<tr>
  <td><%= change_date(time.work_date) %></td>
  <td><%=time.hours %> h</td>
  <td><%=h time.description.slice(0..50) %>
  <%= link_to '...', :action => 'showDescription', :worktime_id => time.id %></td>
  <td><%= link_to 'Change Project', :controller =>'project', :action =>'changeProject', :worktime_id => time.id %>
<tr>
<% end %> 
</table>


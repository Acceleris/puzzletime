.worktimes
  .figures
    .balance
      Überzeitsaldo: 
      = format_hour(@current_overtime)
    .monthly
      Monatliche Arbeitszeit: 
      = monthly_worktime
    //TODO: add weekly calendar = week_calendar_field 'planning', 'end_week_date'

  .weeknav
    = link_to(image_tag('arrow-left.png', 'size' => '16x16', 'alt' => "Vorherige Woche"), worktimes_url(week_date: @previous_week_date), class: 'week-link')

    .browser
      %ul.days
        = render partial: 'overview_day', collection: @week_days, as: :day
        %li.total
          Total:
          = format_hour(sum_total_worktimes(@worktimes))

    = link_to(image_tag('arrow-right.png', 'size' => '16x16', 'alt' => "Vorherige Woche"), worktimes_url(week_date: @next_week_date), class: 'week-link')

  .weekcontent
    = render partial: 'list', collection: @week_days, as: :day

  .controls
    %button Hinzufügen
    %a{href: '#'} Absenz erfassen


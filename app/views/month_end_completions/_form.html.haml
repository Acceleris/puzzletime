= plain_form(entry, url: order_month_end_completion_path(entry), class: 'wide-labels') do |f|
  = f.error_messages

  .form-group
    = f.label(:completed_month_end_at, nil, class: 'col-md-3 control-label')
    .col-md-3
      %p.form-control-static
        = format_attr(entry, :completed_month_end_at)

  .form-group
    = f.label(:completed_month_end_at, 'Als erledigt markieren', class: 'col-md-3 control-label')
    .col-md-3
      = f.collection_select(:completed_month_end_at, @completion_dates, :first, :last, {}, class: 'form-control')

  .form-group
    .col-md-offset-3.col-md-8
      = f.submit_button
      = f.cancel_link(worktimes_path)

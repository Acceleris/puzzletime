= crud_form do |f|
  = f.labeled_input_field :name
  = f.labeled :icon do
    = f.collection_select :icon,
                          glyphicons,
                          :to_s,
                          :to_s,
                          { prompt: ta(:please_select) },
                          class: 'form-control'
  = f.labeled_input_field :position
  - OrderTarget::RATINGS.each do |rating|
    .form-group
      = label_tag("rating_#{rating}_description", class: 'col-md-2 control-label') do
        Beschreibung f√ºr Bewertung
        = order_target_rating_icon(rating, style: 'font-size: 16px; vertical-align: middle;')
      .col-md-5
        = f.input_field "rating_#{rating}_description"

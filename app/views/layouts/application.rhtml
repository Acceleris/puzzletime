<html>
<head>
  <title>puzzleTime</title>
  
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <meta http-equiv="pragma" content="no-cache" />
  <meta http-equiv="cache-control" content="no-cache" />
  <%= stylesheet_link_tag 'puzzletime', :media => 'screen' %>
  <%= javascript_include_tag :defaults %>
</head>
<body>
<div id="outer">

	<div id="header">
		<h1><span>puzzle</span>Time<sup>1.0</sup></h1>
		<h2>&nbsp; by Puzzle ITC</h2>
	</div>

	<div id="splash"></div>
	
	<div id="menu">
	<% if @user != nil%>
	  <ul>
	      	<li class="first"><%= link_to 'Time', :controller => 'worktime', :action => 'listTime' %></li>
			<%if Projectmembership.is_projectmanagement(@user) == true && @user.management == false %>
			<li><%= link_to 'Evaluator', :controller => 'evaluator', :action => 'showProjects' %></li>	
			<% end %>
			<% if @user.management == true %>
			<li><%= link_to 'Evaluator', :controller => 'evaluator', :action => 'listEvaluator' %></li>	
			<li><%= link_to 'Employees', :controller => 'employee', :action => 'listEmployee' %></li>
			<li><%= link_to 'Projects', :controller => 'project', :action => 'listProject' %></li>
			<li><%= link_to 'Clients', :controller => 'client', :action => 'listClient' %></li>
			<li><%= link_to 'Absences', :controller => 'absence', :action => 'listAbsence' %></li>
			<% end %>		    
	  </ul>		  
	  User: <%= @user.lastname %> <%= @user.firstname %> | <%= link_to 'Change Pwd', :controller => 'employee', :action => 'changePasswd' %> | <%= link_to 'Log out', :controller => 'login', :action => 'logout' %>
	<% end %>
	</div>
	
	<% if @flash.has_key?(:notice) %>
	<center><div id="notice"><%= @flash[:notice] %></div></center>
	<% end %>

    <%= @content_for_layout %>

    <br/>
    <br/>
</div>
</body>
</html>

<html>
<head>
  <title>AdminWorktimeController: <%= controller.action_name %></title>
    <%= stylesheet_link_tag 'puzzletime' %>
    <%= javascript_include_tag :defaults %>
</head>
<body>
<div id="outer">

	<div id="upbg"></div>

	<div id="inner">

		<div id="header">
			<h1><span>puzzle</span>Time<sup>1.0</sup></h1>
			<h2>by puzzle itc</h2>
		</div>
	
		<div id="splash"></div>
		<div id="menu">
		<ul>    <% if @user != nil%>
				<li class="first"><li class="first"><%= link_to 'Log out', :controller => 'login', :action => 'logout' %></li>
			    <li><%= link_to 'Change your Password', :controller => 'employee', :action => 'changePasswd' %></li>
		        <% if @user.management === true %>
				<li><%= link_to 'Time', :controller => 'worktime', :action => 'listTime' %></li>
				<li><%= link_to 'Employee', :controller => 'employee', :action => 'listEmployee' %></li>
				<li><%= link_to 'Project', :controller => 'project', :action => 'listProject' %></li>
				<li><%= link_to 'Client', :controller => 'client', :action => 'listClient' %></li>
				<% end %>
				<% end %>
			</ul>
		
		<div id="date"><%= Date.today %></div>
		<% if @user != nil%>
		User: <%= @user.lastname %> <%= @user.firstname %>
		<% end %>
		</div>
		<center><div id="notice"><%= @flash[:notice] %></div></center>
		<br/>

<%= @content_for_layout %>

<br/>
<br/>
</div>
</body>
</html>

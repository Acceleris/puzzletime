<html>
<head>
  <title>puzzleTime</title>
  
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <meta http-equiv="pragma" content="no-cache" />
  <meta http-equiv="cache-control" content="no-cache" />
  <%= stylesheet_link_tag 'puzzletime', :media => 'screen' %>
  <%= javascript_include_tag :defaults %>
</head>
<body>
<div id="outer">
	<div id="header">
		<h1><span>puzzle</span>Time<sup>1.0</sup></h1>
		<h2>&nbsp; by Puzzle ITC</h2>
	</div>

	<div id="splash"></div>
		
	
	<% if @user != nil%>
	<div id="menu">
	  <ul>
	      	<li class="first"><%= link_to 'Time', 
	      	                        :controller => 'worktime', 
	      	                        :action => 'listTime' %></li>
			<%if @user.projectManager? %>
			<li><%= link_to 'My Projects', 
			         :controller => 'evaluator', 
			         :action => 'overview', 
			         :evaluation => 'managed' %></li>	
			<% end %>
			<% if @user.management %>
			<li><%= link_to 'Clients', 
			         :controller => 'evaluator',
                     :action => 'overview',
                     :evaluation => 'clients' %></li>
            <li><%= link_to 'Employees', 
                     :controller => 'evaluator',
                     :action => 'overview',
                     :evaluation => 'employees' %></li>
           <li><%= link_to 'Absences', 
                     :controller => 'evaluator',
                     :action => 'overview',
                     :evaluation => 'absences' %></li>
            <li><%= link_to 'Overtime',
                     :controller => 'evaluator', 
                     :action => 'overtime' %></li>
			<li><%= link_to 'Managing', 
			         :controller => 'project', 
			         :action => 'listProject' %></li>         
			<% end %>		    
	  </ul>		
	    
	  User: <%= @user.label %> | 
	   <%= link_to 'Change Pwd', 
	           :controller => 'employee', 
	           :action => 'changePasswd' %> | 
	   <%= link_to 'Log out', 
	           :controller => 'login', 
	           :action => 'logout' %>
	</div>
	
	<% if @user.management &&
	       ['client', 'employee', 'absence', 'project'].include?(params[:controller]) %>
    <div id="submenu">
    Manage:
    &nbsp;
	<%= link_to 'Employees', :controller => 'employee', :action => 'listEmployee' %>
	&nbsp;
    <%= link_to 'Projects', :controller => 'project', :action => 'listProject' %>
    &nbsp;
    <%= link_to 'Clients', :controller => 'client', :action => 'listClient' %>
    &nbsp;
    <%= link_to 'Absences', :controller => 'absence', :action => 'listAbsence' %>
	</div>
	<% end%>
	
	<% else %>
	<div id="menu">
	</div>
	<% end %>
	
	<% if @flash.has_key?(:notice) %>
	<center><div id="notice"><%= @flash[:notice] %></div></center>
	<% end %>
	
    <%= @content_for_layout %>

    <br/>
    <br/>
</div>
</body>
</html>

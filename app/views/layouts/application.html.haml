!!! Strict
%html{:lang => "de", "xml:lang" => "de", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %title
      puzzleTime #{"- #{@title}" if @title}
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "content-type"}/
    %meta{:content => "no-cache", "http-equiv" => "pragma"}/
    %meta{:content => "no-cache", "http-equiv" => "cache-control"}/
    = favicon_link_tag 'favicon.gif'
    = stylesheet_link_tag 'application', :media => 'all'
    - if @has_calendar
      = dhtml_calendar_includes "blue", "de"

  %body
    #content
      = image_tag 'space.gif', :size => '840x1'
      #header
        = image_tag 'banner.jpg', :size => '547x75', :id => 'banner'
        #splash
          #brand
            puzzleTime
            %sup 2.0 alpha
          #company &nbsp; by Puzzle ITC
      - if @user
        = render 'layouts/menu'
        #menu_user
          = link_to @user.label, :controller => 'employee', :action => 'settings'
          |
          \#{link_to '?', 'https://twiki.puzzle.ch/bin/view/Puzzle/PuzzleTimeFAQ'} |
          \#{link_to 'Logout',  {:controller => 'login',  :action => 'logout'}, :method => 'post'}
        #submenu
          = render 'submenu'
          \&nbsp;

      %h1= @title
      - if flash.key?(:notice)
        #notice= flash[:notice]
      %div
        = yield

  = javascript_include_tag "application"

= plain_form(entry, url: employee_worktimes_commit_path(entry), class: 'wide-labels') do |f|
  = f.error_messages

  .form-group
    = f.label(:committed_worktimes_at, nil, class: 'col-md-3 control-label')
    .col-md-3
      %p.form-control-static
        = format_attr(entry, :committed_worktimes_at)

  .form-group
    = f.label(:committed_worktimes_at, 'Freigeben per', class: 'col-md-3 control-label')
    .col-md-3
      = f.collection_select(:committed_worktimes_at, @commit_dates, :first, :last, {}, class: 'form-control')

  .form-group
    .col-md-offset-3.col-md-8
      = f.submit_button
      = f.cancel_link(worktimes_path)
